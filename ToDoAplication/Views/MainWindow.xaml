<Window x:Class="ToDoAplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoAplication"
        mc:Ignorable="d"
        Title="To-Do Application" Height="600" Width="600">
    <Window.Resources>
        <!-- Theme Resources -->
        <SolidColorBrush x:Key="BackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#E91E63"/>
        <SolidColorBrush x:Key="TextColor" Color="Black"/>
        <SolidColorBrush x:Key="ButtonTextColor" Color="White"/>
        <SolidColorBrush x:Key="GreenColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="BlueColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="RedColor" Color="#F44336"/>
        <SolidColorBrush x:Key="OrangeColor" Color="#FF9800"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="To Do"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"
                   Foreground="{StaticResource PrimaryColor}"
                   Margin="0,12"/>

        <Border Grid.Row="1" Grid.Column="0" Margin="6" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="4">
            <ListBox ItemsSource="{Binding Tasks}"
                     SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <TextBlock Text="Check:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                            <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="To Delete:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" Foreground="{StaticResource OrangeColor}"/>
                            <CheckBox IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="Task Name:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Text}" Margin="2,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Created At:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CreatedAt}"/> 
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Margin="6" Padding="6" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
            <TextBox Text="{Binding NewTaskText, UpdateSourceTrigger=PropertyChanged}"
                     MinHeight="32"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding AddCommand}" />
                </TextBox.InputBindings>
            </TextBox>
        </Border>

        <Grid Grid.Row="3" Grid.Column="0" Margin="6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8" >
                <Button Content="Add" Width="120" Height="34" Margin="6"
                        Command="{Binding AddCommand}"
                        Background="{StaticResource BlueColor}" Foreground="{StaticResource ButtonTextColor}"/>
                <Button Content="Describe" Width="120" Height="34" Margin="6"
                        Background="{StaticResource GreenColor}" Foreground="{StaticResource ButtonTextColor}"
                        Command="{Binding DescribeCommand}"/>
                <Button Content="Delete Marked" Width="140" Height="34" Margin="6"
                        Background="{StaticResource OrangeColor}" Foreground="{StaticResource ButtonTextColor}"
                        Command="{Binding DeleteMarkedCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
