<Window x:Class="ToDoAplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoAplication"
        mc:Ignorable="d"
        Title="To-Do Application" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="To Do"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"
                   Foreground="{StaticResource PrimaryColor}"
                   Margin="0,12"/>

        <Button Grid.Row="0" Grid.Column="0" 
                Content="View Archive" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,12,12,12"
                Width="120"
                Height="34"
                Background="{StaticResource PurpleColor}" 
                Foreground="{StaticResource ButtonTextColor}"
                Click="ViewArchive_Click"/>

        <Border Grid.Row="1" Grid.Column="0" Margin="6" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="4">
            <ListBox ItemsSource="{Binding Tasks}"
                     SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <TextBlock Text="Done:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                            <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="Delete:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" Foreground="{StaticResource RedColor}"/>
                            <CheckBox IsChecked="{Binding IsMarkedForDeletion, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="Task:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Text}" Margin="5,0,15,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Created:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/> 
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Margin="6" Padding="6" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
            <TextBox Text="{Binding NewTaskText, UpdateSourceTrigger=PropertyChanged}"
                     MinHeight="32"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding AddCommand}" />
                </TextBox.InputBindings>
            </TextBox>
        </Border>

        <Grid Grid.Row="3" Grid.Column="0" Margin="6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8" >
                <Button Content="Add" Width="120" Height="34" Margin="6"
                        Command="{Binding AddCommand}"
                        Background="{StaticResource BlueColor}" Foreground="{StaticResource ButtonTextColor}"/>
                <Button Content="Describe" Width="120" Height="34" Margin="6"
                        Background="{StaticResource GreenColor}" Foreground="{StaticResource ButtonTextColor}"
                        Command="{Binding DescribeCommand}"/>
                <Button Content="Delete Marked" Width="140" Height="34" Margin="6"
                        Background="{StaticResource RedColor}" Foreground="{StaticResource ButtonTextColor}"
                        Command="{Binding DeleteMarkedCommand}"/>
                <Button Content="Move to Archive" Width="140" Height="34" Margin="6"
                        Command="{Binding ArchiveCommand}"
                        Background="{StaticResource TealColor}" Foreground="{StaticResource ButtonTextColor}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
